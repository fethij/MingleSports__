<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.minglesports">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <package android:name="com.google.android.apps.maps" />
    </queries>

    <application
        android:name=".MingleSportsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MingleSports.NoActionBar">
        <activity
            android:name=".Splash"
            android:exported="true"
            android:theme="@style/Theme.MingleSports.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".presentation.AirportDetail.AirPortDetail"
            android:exported="true"
            android:theme="@style/Theme.MingleSports.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAk_4nrAPWtn-tm82DnckqP3AuEXNPe-xI" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MingleSports.NoActionBar">
        </activity>
    </application>

</manifest>